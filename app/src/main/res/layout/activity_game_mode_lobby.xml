<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nuvols"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tictactoe_icon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playOfflinebtnGamemode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordercontainer"
        android:text="Play Offline"
        android:textStyle="bold|italic"
        app:backgroundTint="#3F51B5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/playOnlinebtnGamemode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bordercontainer"
        android:text="Play Online"
        android:textStyle="bold|italic"
        app:backgroundTint="#3F51B5" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ajustes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/setting" />

        <ImageButton
            android:id="@+id/goToProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/user_profile_icon" />
    </LinearLayout>

</LinearLayout>
