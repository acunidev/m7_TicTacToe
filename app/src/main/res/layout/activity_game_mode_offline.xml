<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nuvols"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".gamemode.GameModeOffline">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tictactoe_icon" />

    <EditText
        android:id="@+id/player1FormUser"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_marginTop="25sp"
        android:background="@drawable/bordercontainer"
        android:hint="@string/player_1"
        android:inputType="text"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/player2FormUser"
        android:layout_width="250sp"
        android:layout_height="35sp"
        android:layout_marginTop="25sp"
        android:background="@drawable/bordercontainer"
        android:hint="@string/player_2"
        android:inputType="text"
        android:textAlignment="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startOfflineGame1v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bordercontainer"
        android:text="Start Game"
        android:textStyle="bold|italic"
        app:backgroundTint="#3F51B5" />

    <ImageButton
        android:id="@+id/back_arrow_offlineMode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/backarrow" />

</LinearLayout>
