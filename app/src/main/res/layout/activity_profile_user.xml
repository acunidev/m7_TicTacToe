<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nuvols"
    tools:context=".ProfileUser">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/tictactoe_icon"
        android:textColor="#00a62c"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/flechaenrerePerfil"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <!--        android:src="@drawable/flecha"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/profileActprofileIV"
        android:layout_width="150dp"
        android:layout_height="178dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/narutopic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="60dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Change name"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="italic|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="50dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="Change photo"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="italic|bold" />


    <TextView
        android:id="@+id/tv_wins"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="235dp"
        android:background="@drawable/textview_fondo_lila"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="2 wins"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/tv_loses"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/textview_fondo_lila"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="1 losses"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="italic|bold" />

    <include
        android:id="@+id/winHistorial1"
        layout="@layout/historial_temp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="280dp" />

    <include
        android:id="@+id/lossHistorial1"
        layout="@layout/historial_temp_loss"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp" />

    <include
        android:id="@+id/winHistorial2"
        layout="@layout/historial_temp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp" />

</RelativeLayout>